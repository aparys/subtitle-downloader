<Window x:Class="Subtitle_Downloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Subtitle_Downloader"
        mc:Ignorable="d"
        Title="MainWindow" Height="144" Width="219">
    <Grid>
        <Border BorderThickness="1" BorderBrush="Black">
        </Border>

        <Button x:Name="downloadBtn" Content="Download" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>


        <WebBrowser x:Name="browser" Margin="357,0,0,0"/>
        <Button x:Name="findTitlesBtn" Content="Find Titiles" HorizontalAlignment="Left" Margin="10,66,0,0" VerticalAlignment="Top" Height="22" Width="69"/>
        <Label x:Name="label" Content="Label" HorizontalAlignment="Center" Margin="0,35,0,0" VerticalAlignment="Top" Width="199"/>
        <ProgressBar x:Name="progressbar" Height="10" Margin="89,15,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
